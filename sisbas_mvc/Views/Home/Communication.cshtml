@model sisbas_mvc.Models.Lead
@{
    ViewBag.Title = "Communication";
    Layout = "~/Views/Shared/_LayoutPageHome.cshtml";

}

<div class="container-fluid">
    <div class="row">
        @using (Html.BeginForm("Communication", "Default", FormMethod.Post))
        {
            @Html.AntiForgeryToken()            

            <div class="col-xs-12 col-sm-6 col-md-8">
                <div class="well well-sm"><strong><span class="glyphicon glyphicon-asterisk"></span>Boş Geçilemez!</strong></div>
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Ad" })
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                        @Html.ValidationMessageFor(m => m.FirstName)
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Soyad" })
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                        @Html.ValidationMessageFor(m => m.LastName)
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Company, new { @class = "form-control", @placeholder = "Konu" })
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                        @Html.ValidationMessageFor(m => m.Company)
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-6 col-md-8">
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Telefon" })
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                        @Html.ValidationMessageFor(m => m.Phone)
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @rows = "5", @placeholder = "Lütfen iletinizi giriniz" })
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                                                
                    </div>
                </div>
            </div>
                <div class="col-xs-12 col-sm-6 col-md-8">
                    <input class="btn btn-info pull-right" type="submit" value="Gönder" />
                </div>
        }
    </div>
</div>
